#parse("includes/header.vm")

<div class="page">
	#parse("includes/topbar.vm")

	<div class="left">
		#parse("includes/tag_tree.vm")
	</div>

	<div class="main">
		<h2>Submitting a Website</h2>
		
		<form id="newWebsite" action="/new-website" method="POST" class="editForm">
			#springBind("formObject")
			#foreach($error in $status.errorMessages)
				<div class="alert">$error</div>
			#end

            <fieldset>
                #springBind("formObject.title")
                <label for="${status.expression}">Title:</label>
                <input name="${status.expression}" class="title" value="$!{status.value}" />
                <br />
                #foreach($error in $status.errorMessages)
                    <div class="alert">$error</div>
                #end

                #springBind("formObject.url")
                <label for="${status.expression}">URL:</label>
                <input name="${status.expression}" class="title" value="$!{status.value}" />
                <br />
                #foreach($error in $status.errorMessages)
                    <div class="alert">$error</div>
                #end

                #springBind("formObject.tags")
                <label for="${status.expression}">Tags:</label>
                <select name="${status.expression}" id="tags" multiple >
                    #foreach($tag in $tags)
                        <option value="$tag.id" #if($status.actualValue.contains($tag.getBSONId())) SELECTED #end>$tag.displayName
                    #end
                </select>

                <input id="tagName" name="tagName" class="title" value="" />
                <input type="button" value="Add" id="addTag"/>

				<input type="submit" value="Submit" />
			</fieldset>
		</form>
	
		<form action="/cancel" method="POST">
			<input type="submit" value="Cancel" />
		</form>

	</div>
</div>

#parse("includes/footer.vm")