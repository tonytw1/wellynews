#set ($heading = $feed.name)

#parse("includes/header.vm")

<div class="page">
	#parse("includes/topbar.vm")

	<div class="left">
		#parse("includes/tag_tree.vm")
	</div>

	<div class="main">
		<h2><a href="${site_information.url}/feeds">Feeds</a> / $heading</h2>

		#set($page_content = $feed) 
		#parse("includes/page_content_tags.vm")
		
		<ul>
			#if ($editPermissionService.canEdit($feed))
				<li class="admin"><a href="$adminUrlBuilder.getResourceEditUrl($feed)">Edit</a></li>
				<li class="admin"><a href="$adminUrlBuilder.getResourceDeleteUrl($feed)">Delete</a></li>			
			#end
					
			#if ($editPermissionService.canAcceptAllFrom($feed))			
				<li class="admin"><a href="$adminUrlBuilder.getAcceptAllFromFeed($feed)">Accept all</a></li>
			#end
		</ul>

		#if ($feed.lastRead)
			<p>This feed was last read $dateFormatter.timeSince($feed.lastRead)</p>
		#end
		
		#if($feed.isScreenScraped()) 
			#if($feed.publisher) 
				<p>This feed is produced by screen scraping a page from the <a href="$feed.publisher.url">$feed.publisher.name</a> site.</p>
			#else		
				<p>This feed is provided by screen scraping a third parties site.</p>
			#end		
		#else
		
			#if($feed.publisher) 
				<p>This feed is published by: <a href="$urlBuilder.getPublisherUrl($feed.publisher.name)">$feed.publisher.name</a>.</p>
			#else
				<p>This feed is provided by a third party.</p>
			#end
		#end
		
		<p>To subscribe to this feed, enter the following location into your feed reader.</p>
		<ul>
			<li>#parse("includes/rss_icon.vm") <code>$rss_url</code></li>
		</ul>
					
		#if ($main_content) 
			<p>This feed currently contains the following newsitems:</p>
			
			#if($geocoded)
				<div id="map" style="width: 520px; height: 520px"></div>
				#parse("includes/geocodedjs.vm")
			#end

            <div class="section" id="maincontent">
                <ul class="flat_list">
					#foreach($feeditem in $main_content)
                        <li class="content_item">
                            <ul class="main_content_item">
                                #set($item = $feeditem.newsitem)
                                #parse("includes/content_element.vm")

                                #if ($feeditem.localCopy)
                                    <li class="admin"><a href="$adminUrlBuilder.getResourceEditUrl($feeditem.localCopy)">edit local copy</a></li>
                                #else
                                    <li class="admin"><a href="$adminUrlBuilder.getFeednewsItemAcceptUrl($feed, $feeditem.newsitem)">accept</a></li>
                                #end

                                #if ($item.suppressed)
                                    <li class="admin"><a href="$adminUrlBuilder.getFeedNewsitemUnsuppressUrl($item)">unsuppress</a></li>
                                #else
                                    <li class="admin"><a href="$adminUrlBuilder.getFeedNewsitemSuppressUrl($item)">suppress</a></li>
                                #end

                            </ul>
                        </li>
					#end
					#if ($main_content_moreurl)
                        <li class="more"><a href="$main_content_moreurl">
							#if ($main_content_morecount) $main_content_morecount #end
                            More...</a>
                        </li>
					#end
                </ul>
            </div>

		#else 
			<p>There was a problem loading this feed. No feed newsitems could be displayed.</p>
		#end
	</div>

	<div class="right">
		<div class="box">
			#parse("includes/righthand_content.vm")
		</div>
	</div>
</div>

#parse("includes/footer.vm")