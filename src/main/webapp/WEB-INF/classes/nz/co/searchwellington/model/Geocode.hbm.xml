<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nz.co.searchwellington.model.Geocode" table="geocode">
    	<cache usage="read-write" region="nz.co.searchwellington.model.Geocode" />
    		
        <id name="id" type="integer">
            <column name="id" sql-type="integer" not-null="true"/>
            <generator class="native" />                
        </id>

     	<property name="address" type="text">
            <column name="address" not-null="false"/>
        </property>
        
      	<property name="latitude" type="double">
            <column name="latitude" sql-type="double" not-null="false"/>                      
        </property>
        
      	<property name="longitude" type="double">
            <column name="longitude" sql-type="double" not-null="false"/>                      
        </property>
        
        <property name="type" type="text">
        	<column name="type" not-null="false"/>
        </property>
        
         <property name="osmPlaceId" type="integer">
            <column name="osm_id" sql-type="integer" not-null="false"/>
        </property>
                      
    </class>
</hibernate-mapping>