#parse("includes/header.vm")

<div class="page">
	#parse("includes/topbar.vm")

	<div class="left">
		#parse("includes/tag_tree.vm")
	</div>


	<div class="main">
		<h2>Editing a Tag</h2>

		#if ($tag)
			<form action="save" method="POST"> 
				<input name="tag" type="hidden" value="$tag.name" />
				<fieldset>
					
					<label for="name">Name: </label>
					<input name="name" value="$tag.name" />
					<br />
		
					<label for="name">Display Name: </label>
					<input name="displayName" value="$tag.displayName" />
					<br />
					
					#if ($tag_select) 
						<label for="parent">Parent Tag: </label>
				    	$tag_select	
						<br />
					#end
					
					<label for="feed">Related Feed: </label>
					$related_feed_select
					<br />
			
					<label for="twitter">Related Twitter: </label>
					<input name="twitter" value="$!tag.relatedTwitter" />
					<br />
				
					<label for="autotag_hints">Autotag hints: </label>
					<input name="autotag_hints" value="$!tag.autotagHints" />
					<br />
							
					<label for="main_image">Main Image: </label>
					<input name="main_image" #if ($tag.mainImage) value="$tag.mainImage" #end />
					<br />
				
					<label for="secondary_image">Secondary Image: </label>
					<input name="secondary_image" #if ($tag.secondaryImage) value="$tag.secondaryImage" #end />
					<br />
						
					<input type="submit" value="Save" />		
				</fieldset>
			</form>
		#else
			<p>No tag was found on the request. Could not edit.</p>
		#end

		<form action="../../cancel" method="POST">
			<input type="submit" value="cancel" />
		</form>
	</div>

</div>

#parse("includes/footer.vm")