#parse("includes/header.vm")

<div class="page">
#parse("includes/topbar.vm")



<div class="left">
#parse("includes/tag_tree.vm")
</div>





<div class="main">


	<h2>$heading #if ($user.profilename) - $user.profilename #end</h2>

	
		
	
	#if ($user)
	
	
		#if (!$user.profilename) 
			<p>You are signed in but have not set a profile name. Your profile name is used to identifiy you and credit your submissions.</p>

			<form action="profile/save" method="POST"> 			
				<fieldset>						
					<label for="profilename">Choose a profilename:</label>
					<input name="profilename" value="" />											
					<input type="submit" value="Set profile name" />					
				</fieldset>
				
				<p>Profile names may contain letters and numbers only. ie. johnsmith</p>
								
			</form>
		
		#elseif (!$user.username)
					
			<p>You are using a temporary anonomous user profile to post your submissions.</p>
			<p>Access to this profile will cease when you close your browser.</p> 
			
			<p>If you wish to retain the ability to edit your submissions in the future,  
			you will need to link this profile to an OpenID.</a>
			
			<form action="$site_information.url/openid/login" method="POST"> 
 				<fieldset>	
					<input name="openid_claimed_identity" style="background: #fff url('$urlBuilder.getImageUrl('openid_logo.png')') no-repeat left; padding-left: 18px">				
		     	<input type="submit" class="password" value="Link OpenID">
	  		</fieldset>
			</form>
			
			<p>Sign in using your OpenID above, or follow one of these links to use your 
			<a href="$site_information.url/openid/login?openid_claimed_identity=google.com/accounts/o8/id">Google</a>, 
			<a href="$site_information.url/openid/login?openid_claimed_identity=flickr.com">Flickr</a>		
			or <a href="$site_information.url/openid/login?openid_claimed_identity=https://me.yahoo.com/">Yahoo</a> account as an OpenID.
			
			
			
		#else
			
			<ul>
				<li class="admin"><a href="$site_information.url/profile/edit">Edit</a></li>
			</ul>
				
			<p>Your name: 
			#if ($user.name)
				$user.name
			#else
				not set
			#end	
			</p>
						
			<p>Your blog or website: 
			#if ($user.url)
				<a href="$user.url">$user.url</a>
			#else 
				not set
			#end	
			</p>
			
			<p>Your bio: 
			#if ($user.bio)
				$user.bio
			#else
				not set
			#end
			</p>
			
						
		#end
		
		#if ($user.username) 
			<p>Your profile is linked to the OpenID: $user.username</p>
		#end

				
		<h3>Your submissions</h3>
		
		#if ($submitted.size() > 0) 
			<ul class="flat_list">
				#foreach($item in $submitted)
					<li class="content_item">
						<ul class="main_content_item">
							#parse("includes/content_element.vm")
						</ul>
					</li>
				#end
			</ul>
		#else
			<p>You have not made any submissions.</p>
		#end
	#end

</div>




<div class="right">

#parse("includes/login.vm")

<div class="box">
#parse("includes/latest_newsitems.vm")

<br clear="all"/>

</div>


</div>

</div>

#parse("includes/footer.vm")