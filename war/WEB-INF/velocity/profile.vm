	<ul>
	<li>openID: $user.username</li>
	<li>Blog or website: $user.url</li>
	</ul>
	
	
	<h3>Your submissions</h3>
	
	#if ($submitted.size() > 0) 
		<ul class="flat_list">
			#foreach($item in $submitted)
