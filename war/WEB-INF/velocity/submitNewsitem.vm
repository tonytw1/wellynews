#parse("includes/header.vm")

<div class="page">
	#parse("includes/topbar.vm")

	<div class="left">
		#parse("includes/tag_tree.vm")
	</div>


	<div class="main">
		<h2>Submitting a Newsitem</h2>
		
		<form action="$site_information.url/edit/save" method="POST">
			<fieldset>
									
				#parse("includes/form_resource_title_and_url.vm")				
		
				<label for="date">Date: </label>	
				<input name="date" value="$dateFormatter.formatDate($resource.date, 'd MMM yyyy')" />
				<br />
		
				#parse("includes/publisher_form_field.vm")
				
				<label for="description">Description: </label>
				<textarea name="description" rows="6" cols="40">#if ($resource.description)$resource.description#end</textarea>
				<br />				
				
				<label for="embargo_date">Embargo date: </label>
				<input name="embargo_date" #if($resource.embargoedUntil) value="$dateFormatter.formatDate($resource.embargoedUntil, 'd MMM yyyy hh:mm')" #end />
						
				#parse("includes/tag_edit_fields.vm")
		
				#if ($spam_question)
					#parse("includes/spam_question.vm")
				#end
		
				
				<input type="hidden" name="type" value="N" />
				<input type="submit" value="Save" />
		</fieldset>
	</form>
	
	<form action="$site_information.url/cancel" method="POST">
		<input type="submit" value="cancel" />
	</form>

</div>

#parse("includes/footer.vm")