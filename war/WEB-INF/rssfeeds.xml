<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="rssHttpFetcher" class="nz.co.searchwellington.feeds.rss.RssHttpFetcher" >
		<property name="userAgent"><value>${http.useragent}</value></property>
	</bean>
	
	<bean id="rssPrefetcher" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager" />
		<property name="target" ref="rssPrefetcherTarget" />
		<property name="transactionAttributeSource">
			<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource" />
		</property>	
	</bean>
	
	<bean id="rssPrefetcherTarget" class="nz.co.searchwellington.feeds.rss.RssNewsitemPrefetcher" >
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="liveRssfeedNewsitemService" />
		<constructor-arg ref="feedNewsitemCache" />
		<constructor-arg ref="feedReaderRunner" />
		<constructor-arg ref="wallclock" />
	</bean>
	
	<bean id="feedReaderRunner" class="nz.co.searchwellington.feeds.FeedReaderRunner" >
		<constructor-arg ref="feedReader" />		
	</bean>
	
	
	<bean id="feedReader" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager" />
		<property name="target" ref="feedReaderTarget" />
		<property name="transactionAttributeSource">
			<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource" />
		</property>	
	</bean>
	
	<bean id="feedReaderTarget" class="nz.co.searchwellington.feeds.FeedReader">
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="cachingRssfeedNewsitemService" />
		<constructor-arg ref="autoTaggingService" />
		<constructor-arg ref="feedAcceptanceDecider" />
		<constructor-arg ref="dateFormatter" />
		<constructor-arg ref="urlCleaner" />
		<constructor-arg ref="suggestionDAO" />
		<constructor-arg ref="contentUpdateService" />
	</bean>
	
			
	<bean id="feedNewsitemCache" class="nz.co.searchwellington.feeds.FeedNewsitemCache" >
		<constructor-arg ref="cacheManager" />
	</bean>
	
	<bean id="liveRssfeedNewsitemService" class="nz.co.searchwellington.feeds.LiveRssfeedNewsitemService">
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="supressionDAO" />
		<constructor-arg ref="urlCleaner" />
		<constructor-arg ref="rssHttpFetcher" />
		<constructor-arg ref="textTrimmer" />
	</bean>
	
	
	<bean id="cachingRssfeedNewsitemService" class="nz.co.searchwellington.feeds.CachingRssfeedNewsitemService">
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="supressionDAO" />
		<constructor-arg ref="feedNewsitemCache" />
	</bean>
	
	<bean id="textTrimmer" class="nz.co.searchwellington.utils.TextTrimmer" />
	
</beans>