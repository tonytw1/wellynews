<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="solrInputDocumentBuilder" class="nz.co.searchwellington.repositories.SolrInputDocumentBuilder" >
		<constructor-arg ref="snapshotBodyExtractor" />
	</bean>
	
	<bean id="solrQueryService" class="nz.co.searchwellington.repositories.solr.SolrQueryService">
		<constructor-arg ref="solrInputDocumentBuilder" />
		<property name="solrUrl" value="${solr.url}" />
	</bean>
	
		
	<bean id="solrIndexRebuildService" class="nz.co.searchwellington.repositories.SolrIndexRebuildService">
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="solrInputDocumentBuilder" />
		<property name="solrUrl" value="${solr.url}" />
	</bean>
		
	<bean id="solrKeywordQueryBuilder" class="nz.co.searchwellington.repositories.solr.SolrKeywordQueryBuilder" />
	
	<bean id="solrResourceDAO" class="nz.co.searchwellington.repositories.SolrBackedResourceDAO">
 		<constructor-arg ref="solrQueryService" />
 		<constructor-arg ref="resourceDAO" />
 		<constructor-arg ref="tagDAO" />
 		<property name="solrUrl" value="${solr.url}" />
	</bean>
	
	<bean id="resourceDAO" class="nz.co.searchwellington.repositories.HibernateResourceDAO">
 		<constructor-arg ref="sessionFactory" />
 		<constructor-arg ref="tagDAO" />
 		<constructor-arg ref="tweetDAO" />
	</bean>
	
	
	<bean id="tagDAO" class="nz.co.searchwellington.repositories.TagDAO">
 		<constructor-arg ref="sessionFactory" /> 		
	</bean>
	
	<bean id="tweetDAO" class="nz.co.searchwellington.repositories.TweetDAO">
 		<constructor-arg ref="sessionFactory" />
	</bean>
		
	<bean id="solrFacetLoader" class="nz.co.searchwellington.repositories.solr.SolrFacetLoader">
	 	<constructor-arg ref="resourceDAO" />
	</bean>
		
	<bean id="relatedTagsService" class="nz.co.searchwellington.controllers.RelatedTagsService">
		<constructor-arg ref="solrQueryService" />
		<constructor-arg ref="solrFacetLoader" />		
	</bean>
	
	<bean id="configDAO" class="nz.co.searchwellington.repositories.ConfigDAO">
	 	<constructor-arg ref="sessionFactory" />
	</bean>
			
	<bean id="snapshotDAO" class="nz.co.searchwellington.repositories.SnapshotDAO" >
		<constructor-arg ref="keystore" />			
		<property name="keyPrefix" value="url-snapshots::" />
	</bean>

	<bean id="eventsDAO" class="nz.co.searchwellington.repositories.EventsDAO">
		<constructor-arg ref="resourceDAO" />
		<constructor-arg ref="calendarFeedDAO" />
	</bean>
		
	<bean id="userDAO" class="nz.co.searchwellington.repositories.HibernateBackedUserDAO">
	 	<constructor-arg ref="sessionFactory" />
	</bean>
	
	<bean id="supressionDAO" class="nz.co.searchwellington.repositories.SupressionDAO">
		<constructor-arg ref="sessionFactory" />		
	</bean>
	
	<bean id="suggestionDAO" class="nz.co.searchwellington.repositories.SuggestionDAO">
		<constructor-arg ref="sessionFactory" />		
	</bean>	
	 
 </beans>