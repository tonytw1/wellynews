<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class 	name="nz.co.searchwellington.model.UserImpl" 
			proxy="nz.co.searchwellington.model.User"
			table="user" >
		 	
        <id name="id" type="integer" unsaved-value="0" >
            <column name="id" sql-type="integer" not-null="true"/>
                    <generator class="native"/>
        </id>

        <property name="username">
            <column name="username" length="255" not-null="true"/>
        </property>
                
        <property name="profilename">
            <column name="profilename" length="255" not-null="false"/>
        </property>
 
	 	 <property name="url">
            <column name="url" length="255" not-null="false"/>
        </property>
                
        <property name="admin" type="boolean">
			<column name="admin" />
		</property>
		
		<property name="name">
            <column name="name" length="255" not-null="false"/>
        </property>
        
        <property name="bio">
            <column name="bio" not-null="false"/>
        </property>
        
      	<property name="apikey">
            <column name="apikey" not-null="false"/>
        </property>		
                       
    </class>

</hibernate-mapping>